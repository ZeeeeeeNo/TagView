<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="string"></attr>
    <attr name="titleColor" format="color"></attr>
    <attr name="titleSize" format="dimension"></attr>

    <attr name="rectSize" format="dimension"></attr>
    <attr name="bgColor" format="color"></attr>
    <attr name="tagTopPadding" format="dimension"></attr>
    <attr name="tagBottomPadding" format="dimension"></attr>
    <attr name="tagLeftPadding" format="dimension"></attr>
    <attr name="tagRightPadding" format="dimension"></attr>
    <attr name="subTitle" format="string"></attr>
    <attr name="subTitleSize" format="dimension"></attr>
    <attr name="subTitleColor" format="color"></attr>
    <attr name="lineSpace" format="dimension"></attr>
    <attr name="position" format="enum">
        <enum name="topLeft" value="1"></enum>
        <enum name="topRight" value="0"></enum>
    </attr>
    <attr name="shape" format="enum">
        <enum name="irregular" value="0"></enum>
        <enum name="rect" value="1"></enum>
        <enum name="triangle" value="2"></enum>
    </attr>
    <attr name="textStyle">
        <enum name="normal" value="0"/>
        <enum name="italic" value="1"/>
        <enum name="bold" value="2"/>
    </attr>
    <attr name="subTextStyle">
        <enum name="normal" value="0"/>
        <enum name="italic" value="1"/>
        <enum name="bold" value="2"/>
    </attr>
    <declare-styleable name="TagView">
        <attr name="subTextStyle"></attr>
        <attr name="textStyle"></attr>
        <attr name="lineSpace"></attr>
        <attr name="subTitle"></attr>
        <attr name="subTitleSize"></attr>
        <attr name="subTitleColor"></attr>
        <attr name="position"></attr>

        <attr name="title"></attr>
        <attr name="titleColor"></attr>
        <attr name="titleSize"></attr>
        <attr name="bgColor"></attr>
        <attr name="tagTopPadding"></attr>
        <attr name="tagBottomPadding"></attr>
        <attr name="tagLeftPadding"></attr>
        <attr name="tagRightPadding"></attr>
        <attr name="shape"></attr>
        <attr name="rectSize"></attr>

    </declare-styleable>
</resources>